function uwm_res_import_entity_presave(EntityInterface $entity) {

  if ($entity->bundle() === "res_provider") {
    $v2 = $entity->field_res_isacceptingnewpts->value;
    $entity->field_res_isacceptingnewpts->value = (int) $v2;
  }

}

