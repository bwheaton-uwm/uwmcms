  set specialties = [

    {
      'name': 'Internal Medicine',
      'departments': [
        {
          'id': 220070,
          'name': 'U WHCC GEN INT MED',
          'external_name': 'UWMC Women\'s Health Care Center Internal Medicine',
          'open_scheduling': true,
          'visit_type_ids': [ 9000, 103619 ],
