/**
 * Implements hook_preprocess_field__uwm_text__uwm_basic_content().
 */
function uwmbase_preprocess_field__paragraph__uwm_text__uwm_basic_content(&$variables) {
  /***
   * Set variables on the Make an Appointment page
   * so we can render GTM friendly links in content for
   * the generic Make an Appointement page
   *
   * Also checks if on a Provider page, if so, links specific
   * to the Provider's SER ID will be updated.
   *
   * @see field--paragraph--uwm-text-basic-content.html.twig
   */

  // Get the current URI and parse it to check if on
  // Make an Appointment page and grab SER id.
  $uri_parts = UrlHelper::parse(\Drupal::request()->getRequestUri());
  $variables['#cache']['contexts'] = Cache::mergeContexts($variables['#cache']['contexts'], ['url.query_args:ser']);

  if (isset($uri_parts['query']['ser'])) {
    $ser = $uri_parts['query']['ser'];
    $providerNode = _uwmbase_get_provider_by_ser($ser);

    // Get Visit Type ID to create an Online Scheduling button -
    // default to Visit Type ID 9000 if one doesn't exist
    // NOTE: Current state, only get first ID even if more than one exists.
    // @TODO add check / functionality for multiple Visit Type IDs.
    if ($providerNode->get('field_res_visit_type_id')->get(0) != NULL) {
      $first_visit_type_id = $providerNode->get('field_res_visit_type_id')->get(0)->getString();
    }
    $set_visit_type_id = isset($first_visit_type_id) ? $first_visit_type_id : 9000;
  }

  if ($uri_parts['path'] == '/patient-resources/make-an-appointment') {
    foreach ($variables['items'] as &$item) {
      $textBoxContent = $item['content']['#text'];
      $eCareBooking = 'Returning patient?';
      $eCareGeneric = 'Your primary care appointments and some specialty care can be booked online.';
      $eCareCancel = "Don't have an eCare account?";

      if (stristr($textBoxContent, $eCareCancel) == TRUE) {
        $variables['attributes']['class'][] = 'make-appt-page--margin-fix';

        $variables['eCareCancelText'] = "Cancel using this form.";
        $variables['eCareCancelLink'] = "https://forms.office.com/Pages/ResponsePage.aspx?id=W9229i_wGkSZoBYqxQYL0njZ16GAnYNHqcbFU33QtSFURUo4WFEwWUhTVzdHMVBWRUhSUDlCSlVJUS4u";
      }

      $variables['eCareBookText'] = "Book in eCare.";

      if (stristr($textBoxContent, $eCareBooking) == TRUE) {
        $variables['attributes']['class'][] = 'make-appt-page--margin-fix make-appt-page--inline-elements';

        if (isset($ser)) {
          $variables['eCareBookLink'] = 'https://ecare.uwmedicine.org/prod01/Scheduling?workflow=ExistingProvider&selProvId=' . $ser;
        }
        else {
          $variables['eCareBookLink'] = 'https://ecare.uwmedicine.org/PROD01/Scheduling';
        }
      }

      if (stristr($textBoxContent, $eCareGeneric) == TRUE && isset($ser)) {
        $item['content']['#text'] = '<div class="uwm-cta cta-to-ecareuwmedicineorg cta-to-prod01-openscheduling-signupandschedule-embeddedschedule cta-from-patient-resources-make-an-appointment make-appt-page--book-online-link"><a href="https://ecare.uwmedicine.org/prod01/openscheduling/SignupAndSchedule/EmbeddedSchedule?id=' . $ser . '&vt=' . $set_visit_type_id . '&view=plain">Book with ' . '<span class="font-weight-semi-bold">' . trim($providerNode->label()) . '</span>' . '</a></div>';
      }

    }
  }
}

/**
 * Implements hook_theme_suggestions_HOOK_alter().
 */
function uwmbase_theme_suggestions_page_alter(array &$suggestions, array $variables) {

  // If on an individual node page, add the node type to theme suggestions.
  if ($node = \Drupal::routeMatch()->getParameter('node')) {
    $first_suggestion = array_shift($suggestions);
    array_unshift($suggestions, 'page__node__' . $node->bundle());
    if ($first_suggestion) {
      array_unshift($suggestions, $first_suggestion);
    }
    if (in_array('page__node__edit', $suggestions)) {
      $suggestions[] = 'page__node__edit__' . $node->bundle();
    }
  }
  elseif ($media = \Drupal::routeMatch()->getParameter('media')) {
    $first_suggestion = array_shift($suggestions);
    array_unshift($suggestions, 'page__media__' . $media->bundle());
    if ($first_suggestion) {
      array_unshift($suggestions, $first_suggestion);
    }
    if (in_array('page__media__edit', $suggestions)) {
      $suggestions[] = 'page__media__edit__' . $media->bundle();
    }
  }

  /*
   * Provide a node suggestion based on the  alias. This allows a special
   * file for a node but, based on the path which tends to be more fixed
   * than the node id.
   */
  $current_path = \Drupal::service('path.current')->getPath();
  $result = \Drupal::service('path.alias_manager')
    ->getAliasByPath($current_path);

  $path_alias = trim($result, '/');
  $path_alias = str_replace(['/', '-'], '_', $path_alias);

  $suggestions[] = 'page__path_alias__' . $path_alias;

}

/**
 * Implements hook_theme_suggestions_HOOK_alter().
 */
function uwmbase_theme_suggestions_node_alter(array &$suggestions, array $variables) {

  /*
   * Several node-types have their own template but, no view-mode template. This
   * adds any generic view-mode template above the node-type template.
   */
  if (!empty($variables['elements']['#node']) && method_exists($variables['elements']['#node'], 'getType')) {

    $viewModeSuggestion = 'node__' . $variables['elements']['#view_mode'];
    $nodeTypeSuggestion = 'node__' . $variables['elements']['#node']->getType();

    $vm = array_search($viewModeSuggestion, $suggestions);
    $nt = array_search($nodeTypeSuggestion, $suggestions);

    if ($vm !== FALSE && $nt !== FALSE) {
      $suggestions[$nt] = $viewModeSuggestion;
      $suggestions[$vm] = $nodeTypeSuggestion;
    }
  }

}

/**
 * Implements hook_preprocess_paragraph().
 */
function uwmbase_preprocess_paragraph(&$variables) {

  /** @var \Drupal\paragraphs\ParagraphInterface $paragraph */
  $paragraph = $variables['paragraph'];
  $node = \Drupal::request()->attributes->get('node');
  if ($node) {
    $variables['node_title'] = $node->getTitle();
  }

  $parent = $paragraph->getParentEntity();

  // Make an Appointment Page Override:
  // This targets the make an appointment page and adds a class to the page.
  // so that we can overrides the default.
  // link style from grey with underline to blue with no underline.
  // SEE themes > custom > uwmbase > components >
  // make-appt-page > make_appt-page.scss.
  // @TODO make this a global link change and remove this override.
  $paragraph_id = $paragraph->id();

  if ($paragraph_id == 53086) {
    $variables['attributes']['class'][] = 'make-appt-page';
  }

  // Add css classes to identify the parent field.
  // This helps finding elements with CSS in Google Tag Manager.
  $variables['css_parents_classes'] = get_css_classes_for_parent($variables);

  // For any paragraph type, check if a parent Grid paragraph specified to
  // style all children as cards.
  // @see uwmbase_preprocess_paragraph__uwm_grid()
  $variables['style_as_card'] = (isset($variables['elements']['#style_as_card']) && $variables['elements']['#style_as_card'] === TRUE);

  // Add the Bootstrap 'card' css class.
  if ($variables['style_as_card']) {
    $variables['attributes']['class'][] = 'card';
  }

  // For outermost container paragraph types, check for fields that provide
  // styling metadata for the template, and set any default values.
  $variables['style_values'] = [];

  if (in_array($paragraph->bundle(), [
    'uwm_section',
    'uwm_sections_medical_services',
    'uwm_featured_story',
  ])) {

    // Check if Featured Story paragraph references a Featured Story
    // block_content entity, to use its fields instead.
    $entity = $paragraph;
    if ($paragraph->bundle() === 'uwm_featured_story' && !$paragraph->get('field_uwm_block')->isEmpty()) {
      $entity = $paragraph->get('field_uwm_block')->referencedEntities()[0];
    }

    foreach ([
      'field_uwm_accent_color',
      'field_uwm_bottom_border_options',
      'field_uwm_background_color',
    ] as $field_name) {

      if ($entity->hasField($field_name)) {

        // Retrieve the field value, or the referenced entity from it.
        $item = NULL;
        $ref_entity = NULL;

        if (!$entity->get($field_name)->isEmpty()) {
          $items = $entity->get($field_name);

          if ($items->getFieldDefinition()->getType() === 'entity_reference') {
            $ref_entity = $items->referencedEntities()[0];
          }
          else {
            $item = $items->first();
          }
        }

        switch ($field_name) {
          case 'field_uwm_accent_color':

            if (!empty($ref_entity)) {
              $variables['style_values'][$field_name] = $ref_entity->label();
            }
            else {
              // For Medical Service/Specialty pages only, default to 'orange'.
              if ($parent->getEntityTypeId() === 'node' && _uwmbase_is_med_service_specialty_type($parent->bundle())) {
                $variables['style_values'][$field_name] = 'orange';
              }
            }

            break;

          case 'field_uwm_bottom_border_options':

            // Default to 'angled' everywhere.
            $variables['style_values'][$field_name] = (!empty($ref_entity) ? $ref_entity->label() : 'angled');

            break;

        }

      }

    }
  }

}

