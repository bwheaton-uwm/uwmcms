<header class="container-fluid">


    <div class="row hidden-xs purple">

        <div class="col-sm-12 col-md-2 header-logo">
            <a class="logo" href="/" title="{{ 'Home'|t }}" rel="home">
                <img src="/themes/custom/uwmed/dist/assets/uw-medicine-logo.png"
                     height="21" width="158" alt="UW Medicine">
            </a>
        </div>


        <div class="col-xs-12 col-sm-9 col-md-8 quick-links">
            {{ drupal_menu('uw-header---quick-links', 1, 1) }}
        </div>


        <div class="col-sm-3 col-md-2 pull-right header-search">
            <form class="form-inline"
                  action="http://www.uwmedicine.org/search/Pages/default.aspx">
                <div class="input-group">

                    <input name="k" type="text" class="form-control"
                           aria-label="Search terms">
                    <i class="fa fa-search" aria-hidden="true"></i>

                </div>
            </form>
        </div>

    </div>


    <div class="row hidden-xs white">

        <div class="col-xs-12 col-sm-3 pull-right make-gift">

            <div class="wrap">
                <div class="bg"></div>

                {#{{ drupal_menu('uw-header---make-a-gift', 1, 1) }}#}
                <ul class="wrap nav navbar-nav">
                    <li>
                        <a href="/make-a-gift">{{ 'Make a Gift'|t }}
                            &nbsp;<i class="fa fa-angle-right"
                                     aria-hidden="true"></i></a>

                    </li>
                </ul>


            </div>
        </div>
        <div class="col-xs-12 col-sm-9 header-main-navigation">

            {{ page.navigation }}
            {{ drupal_menu('uw-main-navigation', 0, 3) }}

        </div>
        <div class="col-sm-12 shadow"></div>

    </div>


    <div class="row visible-xs-block mob">

        <div class="col-xs-12 header-logo">
            <a class="logo" href="/" title="{{ 'Home'|t }}" rel="home">
                <img src="/themes/custom/uwmed/dist/assets/uw-medicine-logo-mobile.png"
                     height="17" width="128" alt="UW Medicine">
            </a>

            <div class="pull-right header-toggles">

                <button type="button" class="navbar-toggle"
                        data-toggle="collapse"
                        data-target=".navbar-collapse">
                    <i class="fa fa-bars" aria-hidden="true"></i>
                </button>

                <button type="button" class="navbar-toggle"
                        data-toggle="collapse"
                        data-target=".search-collapse">
                    <i class="fa fa-search" aria-hidden="true"></i>
                </button>


            </div>

        </div>


        <div class="col-xs-12 search-collapse collapse">

            <form class="form-inline"
                  action="http://www.uwmedicine.org/search/Pages/default.aspx">
                <div class="input-group">
                    <i class="fa fa-search" aria-hidden="true"></i>
                    <input name="k" title="{{ 'Search'|t }}" type="text" class="form-control"
                           aria-label="Search terms">
                    <button type="button" class="navbar-toggle"
                            data-toggle="collapse"
                            data-target=".search-collapse">
                        <i class="fa fa-times" aria-hidden="true"></i>
                    </button>
                </div>
            </form>

        </div>


    </div>

</header>